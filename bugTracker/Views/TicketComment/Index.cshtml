@model List<TicketCommentView>
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="card-body">
    <div class="table-responsive">
        <h5>Comment List</h5>
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead class="card-header">
                <tr>
                    <th>Id</th>
                    <th>Comment</th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th>TicketId</th>
                    <th>Creator</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Id</td>
                        <td>@record.Comment</td>
                        <td>@record.Created</td>
                        <td>@record.Updated</td>
                        <td>@record.TicketId</td>
                        <td>@record.Creator.DisplayName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

