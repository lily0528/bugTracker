@model CreateTicket
@{
    ViewBag.Title = "CreateTicket";
}

<h2>CreateTicket</h2>
<div id="content-wrapper">
    <div class="container-fluid col-lg-8">
        <div class="card col-lg-12">
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(p => p.Title, "Ticket Title:")
                    @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Ticket Title" })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.Description, "Description:")
                    @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description", rows = 5, columns = 5 })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(Model => Model.Project, "Project:")
                    @Html.DropDownList("ProjectId", Model.Project, "Select Project", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.ProjectId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.TicketType, "Ticket Type")
                    @Html.DropDownList("TicketTypeId", Model.TicketType, "Select Type", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.TicketTypeId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.TicketPriority, "Ticket Priorities")
                    @Html.DropDownList("TicketPriorityId", Model.TicketPriority, "Select Priority", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.TicketPriorityId, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


