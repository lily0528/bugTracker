@model CreateTicket
@{
    ViewBag.Title = "CreateTicket";
}

<h2>CreateTicket</h2>
<form method="post">
    <div class="form-group">
        @Html.LabelFor(p => p.Title, "Ticket Title:")
        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Ticket Title" })

    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description", rows = 5, columns = 5 })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description", rows = 5, columns = 5 })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProjectId, "Project")
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ProjectId, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ProjectId, "", new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


