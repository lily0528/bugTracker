@model TicketAssginDeveloper

@{
    ViewBag.Title = "AssignDeveloper";
}

<div class="row">
    <div class="col-lg-11">
        <div class="card mb-8">
            <div class="card-header">
                <i class="fas fa-chart-area"></i>
                Assign Developer
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <div><h6>Ticket Id:<span>&emsp;&emsp;</span>@Model.TicketId</h6></div>
                        <div><h6>Ticket Title:<span>&emsp;&emsp;</span>@Model.TicketTitle</h6></div>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.DeveloperId, "Developer")
                        @Html.DropDownListFor(Model => Model.DeveloperId, Model.DeveloperList, "--Select Developer--", htmlAttributes: new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="card-footer small text-muted">@DateTime.Now</div>
        </div>

    </div>
</div>



@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

