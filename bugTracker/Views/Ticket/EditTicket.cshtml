@model  EditTicket
@{
    ViewBag.Title = "EditTicket";
}

<div class="row">
    <div class="col-lg-11">
        <div class="card mb-8">
            <div class="card-header">
                <i class="fas fa-angle-down"></i>
                Edit Ticket
            </div>
            <div class="card-body">
                <form method="post">
                    @*@if(User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                        {
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.NotifyMe, "Notify Me:")
                        @Html.CheckBoxFor(Model => Model.NotifyMe)
                        (If you don't want receive notification, please set empty value!")
                    </div>
                        }*@
                        <div class="form-group">
                            @Html.LabelFor(p => p.Title, "Ticket Title:")
                            @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Ticket Title" })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(p => p.Description, "Description:")
                            @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description", rows = 5, columns = 5 })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(Model => Model.Project, "Project:")
                            @Html.DropDownList("ProjectId", Model.Project, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.ProjectId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(Model => Model.TicketType, "Ticket Types:")
                            @Html.DropDownList("TicketTypeId", Model.TicketType, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.TicketTypeId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(Model => Model.TicketPriority, "Ticket Priorities:")
                            @Html.DropDownList("TicketPriorityId", Model.TicketPriority, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.TicketPriorityId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(Model => Model.TicketStatus, "Ticket Status:")
                            @Html.DropDownList("TicketStatusId", Model.TicketStatus, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.TicketStatusId, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
            </div>
            <div class="card-footer small text-muted">@DateTime.Now</div>
        </div>

    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



