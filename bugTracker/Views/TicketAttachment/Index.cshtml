@model List<TicketAttachmentView>
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<div class="card-header">
    <i class="fas fa-list-ul"></i>
    Attachment List
</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="card-header">
                    <tr>
                        <th>Id</th>
                        <th>Description</th>
                        <th>FileUrl</th>
                        <th>Creator</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        <tr>
                            <td>@record.Id</td>
                            <td>@record.Description</td>
                            <td>@record.FileUrl</td>
                            <td>@record.Creator.DisplayName</td>
                            <td>
                                <a href="@Url.Content(record.FileUrl)">
                                    @Html.DisplayFor(m => record.Description)
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
 