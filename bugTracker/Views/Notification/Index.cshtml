@model  IndexTicketNotification
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-11">
        <div class="card mb-8">
            <div class="card-header">
                <i class="fas fa-angle-down"></i><strong>Notification</strong>
                
            </div>
            <div class="card-body">
                @using (Html.BeginForm("SaveNotification", "Notification", new { ticketId = Model.TicketId }))
                {
                    @*<form method="post">*@
                    <div class="form-group">
                        @Html.HiddenFor(model => model.TicketId)
                        @Html.HiddenFor(model => model.UserId)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.IfNotice, "Do you want to receive the Email?")
                        @Html.CheckBoxFor(p => p.IfNotice)
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    @*</form>*@
                }
            </div>
            <div><strong>@Html.ActionLink("Back Last Page ", "Index", "Ticket")</strong></div>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}