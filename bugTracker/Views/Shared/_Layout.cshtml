            }
            @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Project Manager")))
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ProjectList", "Project")">
                        <i class="fas fa-fw fa-chart-area"></i>
