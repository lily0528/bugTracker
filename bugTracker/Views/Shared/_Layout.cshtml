            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <li class="nav-item dropdown">
                    <a class="nav-link" href="@Url.Action("Index", "UserRole")">
                        <i class="fas fa-fw fa-chart-area"></i>
