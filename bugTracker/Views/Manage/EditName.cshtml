@model bugTracker.Models.EditNameViewModel
@{
    ViewBag.Title = "EditName";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("EditName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(m => m.DisplayName, "Display Name:")
            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", placeholder = "Name" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
